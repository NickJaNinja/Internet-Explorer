<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4c4b4b">

    <TextView
        android:id="@+id/pilotText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PILOT"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/pilotSkillLayout"
        app:layout_constraintStart_toStartOf="@+id/pilotSkillLayout"
        app:layout_constraintTop_toBottomOf="@+id/pilotSkillLayout" />

    <TextView
        android:id="@+id/pilotText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIGHTER"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/fighterSkillLayout"
        app:layout_constraintStart_toStartOf="@+id/fighterSkillLayout"
        app:layout_constraintTop_toBottomOf="@+id/fighterSkillLayout" />

    <TextView
        android:id="@+id/pilotText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="ENGINEER"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/engineerSkillLayout"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toStartOf="@+id/engineerSkillLayout"
        app:layout_constraintTop_toBottomOf="@+id/engineerSkillLayout" />

    <TextView
        android:id="@+id/pilotText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TRADER"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/traderSkillLayout"
        app:layout_constraintStart_toStartOf="@+id/traderSkillLayout"
        app:layout_constraintTop_toBottomOf="@+id/traderSkillLayout" />

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="Create A New Character"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/playerNameLayout"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pageTitle">

        <TextView
            android:id="@+id/playerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Pilot Name"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="166dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/playerNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bob the Destroyer"
            android:textColor="#ffffff" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/pilotSkillLayout"
        android:layout_width="145dp"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/playerNameLayout"
        app:layout_constraintTop_toBottomOf="@+id/playerNameLayout">

        <Button
            android:id="@+id/pilotSkillSubtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:background="#FF0000"
            android:text="—"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/pilotSkill"
            android:layout_width="0t"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".4"
            android:gravity="center"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="224dp" />

        <Button
            android:id="@+id/pilotSkillAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:background="#32CD32"
            android:text="+"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fighterSkillLayout"
        android:layout_width="145dp"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/playerNameLayout"
        app:layout_constraintTop_toBottomOf="@+id/pilotSkillLayout">

        <Button
            android:id="@+id/fighterSkillSubtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:background="#FF0000"
            android:text="—"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/fighterSkill"
            android:layout_width="0t"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".4"
            android:gravity="center"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="224dp" />

        <Button
            android:id="@+id/fighterSkillAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:background="#32CD32"
            android:text="+"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/traderSkillLayout"
        android:layout_width="145dp"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/playerNameLayout"
        app:layout_constraintTop_toTopOf="@+id/pilotText2">

        <Button
            android:id="@+id/traderSkillSubtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:background="#FF0000"
            android:text="—"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/traderSkill"
            android:layout_width="0t"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".4"
            android:gravity="center"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="224dp" />

        <Button
            android:id="@+id/traderSkillAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:background="#32CD32"
            android:text="+"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/engineerSkillLayout"
        android:layout_width="145dp"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/playerNameLayout"
        app:layout_constraintTop_toBottomOf="@+id/traderSkillLayout">

        <Button
            android:id="@+id/engineerSkillSubtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:background="#FF0000"
            android:text="—"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/engineerSkill"
            android:layout_width="0t"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".4"
            android:gravity="center"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="224dp" />

        <Button
            android:id="@+id/engineerSkillAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:background="#32CD32"
            android:text="+"
            android:textStyle="normal" />

    </LinearLayout>

    <TextView
        android:id="@+id/skill_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="8dp"
        android:text="SKILLS"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/pilotSkillLayout"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/skill_points_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginBottom="8dp"
        android:text="SKILL POINTS"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/pilotSkillLayout"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/remaining_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="65dp"
        android:layout_marginRight="65dp"
        android:text="REMAINING"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/pilotSkillLayout"
        app:layout_constraintTop_toBottomOf="@+id/skill_points_text" />

    <TextView
        android:id="@+id/skill_points_value"
        android:layout_width="34dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toEndOf="@+id/pilotSkillLayout"
        app:layout_constraintTop_toBottomOf="@+id/remaining_text" />

    <Spinner
        android:id="@+id/difficulty_spinner"
        android:layout_width="180dp"
        android:layout_height="32dp"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toEndOf="@+id/traderSkillLayout"
        app:layout_constraintTop_toBottomOf="@+id/skill_points_value"
        app:layout_constraintVertical_bias="0.188" />

    <TextView
        android:id="@+id/difficulty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="DIFFICULTY"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/difficulty_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toEndOf="@+id/fighterSkillLayout"
        app:layout_constraintTop_toBottomOf="@+id/skill_points_value"
        app:layout_constraintVertical_bias="0.823" />

    <Button
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.914" />

</android.support.constraint.ConstraintLayout>