<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4c4b4b">

    <TextView
        android:id="@+id/pilotText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIGHTER"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="370dp" />

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create A New Character"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#ffffff"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/playerNameLayout"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/pageTitle"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/playerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilot Name"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="166dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/playerNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bob the Destroyer"
            android:textColor="#ffffff" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/pilotSkillLayout"
        android:layout_width="145dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/playerNameLayout"
        app:layout_constraintStart_toStartOf="@+id/playerNameLayout"
        app:layout_constraintTop_toBottomOf="@+id/playerNameLayout">

        <Button
            android:id="@+id/pilotSkillSubtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:text="—"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/pilotSkill"
            android:layout_width="0t"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".4"
            android:gravity="center"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="224dp" />

        <Button
            android:id="@+id/pilotSkillAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="+"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fighterFighterSkill"
        android:layout_width="145dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/playerNameLayout"
        app:layout_constraintStart_toStartOf="@+id/playerNameLayout"
        app:layout_constraintTop_toBottomOf="@+id/pilotSkillLayout">

        <Button
            android:id="@+id/fighterSkillSubtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:text="—"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/fighterSkill"
            android:layout_width="0t"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".4"
            android:gravity="center"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="224dp" />

        <Button
            android:id="@+id/fighterSkillAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="+"
            android:textStyle="normal" />

    </LinearLayout>

    <TextView
        android:id="@+id/pilotText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PILOT"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="272dp" />

    <LinearLayout
        android:id="@+id/fighterFighterSkill"
        android:layout_width="145dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/playerNameLayout"
        app:layout_constraintStart_toStartOf="@+id/playerNameLayout"
        app:layout_constraintTop_toTopOf="@+id/pilotText2">

        <Button
            android:id="@+id/fighterSkillSubtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:text="—"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/fighterSkill"
            android:layout_width="0t"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".4"
            android:gravity="center"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="224dp" />

        <Button
            android:id="@+id/fighterSkillAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="+"
            android:textStyle="normal" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>