<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android=
    "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4B4B4C">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Create A New Character"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#ffffff"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/playerNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingStart="5dp"
                android:text="Pilot Name"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#ffffff"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="166dp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/playerNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:hint="eg. Bob the Destroyer"
                android:textColor="#ffffff"
                app:backgroundTint="#ffffff"
                android:maxLines="1"
                android:lines="1"
                android:maxLength="35"
                android:text="temp text"></android.support.design.widget.TextInputEditText>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:text="SKILLS"
            android:textColor="#ffffff"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/pilotSkillLayout"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="211dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/pilotSkillLayout"
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="@+id/playerNameLayout"
                    app:layout_constraintTop_toBottomOf="@+id/playerNameLayout">

                    <Button
                        android:id="@+id/pilotSkillSubtract"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".33"
                        android:background="@color/colorMinusButton"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="—"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/pilotSkill"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".33"
                        android:background="#676767"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="4"
                        android:textColor="#ffffff"
                        android:textSize="30sp"
                        tools:layout_editor_absoluteX="205dp"
                        tools:layout_editor_absoluteY="224dp" />

                    <Button
                        android:id="@+id/pilotSkillAdd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".33"
                        android:background="@color/colorPlusButton"
                        android:gravity="center_horizontal|center_vertical"
                        android:onClick="onPlusPressed"
                        android:text="+"
                        android:textStyle="normal" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="PILOT"
                    android:textColor="#ffffff"
                    app:layout_constraintEnd_toEndOf="@+id/pilotSkillLayout"
                    app:layout_constraintStart_toStartOf="@+id/pilotSkillLayout"
                    app:layout_constraintTop_toBottomOf="@+id/pilotSkillLayout" />

                <LinearLayout
                    android:id="@+id/fighterSkillLayout"
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="@+id/playerNameLayout"
                    app:layout_constraintTop_toBottomOf="@+id/pilotSkillLayout">

                    <Button
                        android:id="@+id/fighterSkillSubtract"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".33"
                        android:background="@color/colorMinusButton"
                        android:gravity="center_horizontal|center_vertical"
                        android:onClick="onPlusPressed"
                        android:text="—"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/fighterSkill"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".33"
                        android:background="#676767"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="4"
                        android:textColor="#ffffff"
                        android:textSize="30sp"
                        tools:layout_editor_absoluteX="205dp"
                        tools:layout_editor_absoluteY="224dp" />

                    <Button
                        android:id="@+id/fighterSkillAdd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".33"
                        android:background="@color/colorPlusButton"
                        android:gravity="center_horizontal|center_vertical"
                        android:onClick="onPlusPressed"
                        android:text="+"
                        android:textStyle="normal" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="FIGHTER"
                    android:textColor="#ffffff"
                    app:layout_constraintEnd_toEndOf="@+id/fighterSkillLayout"
                    app:layout_constraintStart_toStartOf="@+id/fighterSkillLayout"
                    app:layout_constraintTop_toBottomOf="@+id/fighterSkillLayout" />

                <LinearLayout
                    android:id="@+id/traderSkillLayout"
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="@+id/playerNameLayout">

                    <Button
                        android:id="@+id/traderSkillSubtract"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".33"
                        android:background="@color/colorMinusButton"
                        android:gravity="center_horizontal|center_vertical"
                        android:onClick="onPlusPressed"
                        android:text="—"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/traderSkill"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".33"
                        android:background="#676767"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="4"
                        android:textColor="#ffffff"
                        android:textSize="30sp"
                        tools:layout_editor_absoluteX="205dp"
                        tools:layout_editor_absoluteY="224dp" />

                    <Button
                        android:id="@+id/traderSkillAdd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".33"
                        android:background="@color/colorPlusButton"
                        android:gravity="center_horizontal|center_vertical"
                        android:onClick="onPlusPressed"
                        android:text="+"
                        android:textStyle="normal" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="TRADER"
                    android:textColor="#ffffff"
                    app:layout_constraintEnd_toEndOf="@+id/traderSkillLayout"
                    app:layout_constraintStart_toStartOf="@+id/traderSkillLayout"
                    app:layout_constraintTop_toBottomOf="@+id/traderSkillLayout" />

                <LinearLayout
                    android:id="@+id/engineerSkillLayout"
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="@+id/playerNameLayout"
                    app:layout_constraintTop_toBottomOf="@+id/traderSkillLayout">

                    <Button
                        android:id="@+id/engineerSkillSubtract"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".33"
                        android:background="@color/colorMinusButton"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="—"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/engineerSkill"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".33"
                        android:background="#676767"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="4"
                        android:textColor="#ffffff"
                        android:textSize="30sp"
                        tools:layout_editor_absoluteX="205dp"
                        tools:layout_editor_absoluteY="224dp" />

                    <Button
                        android:id="@+id/engineerSkillAdd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".33"
                        android:background="@color/colorPlusButton"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="+"
                        android:textStyle="normal" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center_horizontal"
                    android:text="ENGINEER"
                    android:textColor="#ffffff"
                    app:layout_constraintEnd_toEndOf="@+id/engineerSkillLayout"
                    app:layout_constraintHorizontal_bias="0.549"
                    app:layout_constraintStart_toStartOf="@+id/engineerSkillLayout"
                    app:layout_constraintTop_toBottomOf="@+id/engineerSkillLayout" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:gravity="center_horizontal"
                    android:text="SKILL POINTS"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="REMAINING"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/skill_points_value"
                    android:layout_width="52dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="#FF5FCA77"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="0"
                    android:textSize="30sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="DIFFICULTY"
            android:textColor="#ffffff"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.483" />

        <Spinner
            android:id="@+id/difficulty_spinner"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="16dp"
            android:background="#BABABA"
            android:popupBackground="#676767"
            android:theme="@style/spinnerTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:background="#FFD25A64"
                android:gravity="center"
                android:text="✖"
                android:textSize="18sp"
                style="?android:attr/buttonBarButtonStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/reset_button"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:background="#FFA500"
                android:gravity="center"
                android:text="↻"
                android:textSize="18sp"
                style="?android:attr/buttonBarButtonStyle"
                android:textStyle="bold" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="100dp"
                android:layout_marginStart="100dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:background="#676767"
                android:onClick="onOkPressed"
                android:text="CONTINUE"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>